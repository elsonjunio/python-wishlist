{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    // python -m debugpy --listen 5678 --wait-for-client ./myscript.py
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Arquivo Atual",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
        },
        {
            "name": "FastAPI Debug (fastapi run)",
            "type": "debugpy",
            "request": "launch",
            "module": "fastapi",
            "args": [
                "run",
                "app/main.py",  // caminho do seu arquivo principal
                "--reload",
                "--host", "127.0.0.1",
                "--port", "8000"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
,
        {
            "name": "FastAPI Debug (uvicorn)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",  // caminho do seu arquivo principal
                "--reload",
                "--host", "127.0.0.1",
                "--port", "8000",
                "--lifespan", "on",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            }
        }
    ]
}